<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger" role="alert">
        Data contact tidak ada
        <a href="/contact" class="alert-link">Kembali</a>
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHp %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a class="btn btn-info badge" href="/contact/edit/<%= contact.nama %>"
            >Edit</a
          >
          <a
            class="btn btn-danger badge"
            onclick="return confirm('Apakah anda yakin?')"
            href="/contact/delete/<%= contact.nama %>"
            >Hapus</a
          >
          <a href="/contact" class="card-link d-block">Kembali</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
